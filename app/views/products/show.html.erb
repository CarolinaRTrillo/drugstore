<div style="background-color: #15395b;">
  <div class= "container mx-auto" style="width: 600px;" >
    <div class="image mx-auto">
      <%= cl_image_tag @product.photo.key, class: "imagen", height: 350, crop: :fill %>
      <h1 style="color: white;"><%= @product.name  %></h1>
      <h2 style="color: white;"><%= @product.price  %> ARS </h2>
      <p style="color: white;"><%= @product.details %></p>
      <a href="#" class="btn btn-primary">Comprar</a>
      <div class= "mt-5 d-flex justify-content-end">
        <% if @product.user_id == current_user.id %>
        <%= link_to "Delete", product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Estas seguro?"}, class: "btn btn-secondary" %>
        <%= link_to "Edit", edit_product_path(@product), class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
