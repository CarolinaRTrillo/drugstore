
<div class="container mt-5">
  <div class="row product-container">
    <% @products.each do |product| %>
          <div class="col">
            <div class="card" style="box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2); border-radius: 8px 8px 8px 8px;">
              <% if product.photo.key != nil %>
                <%= cl_image_tag product.photo.key, class:"img-card card-img-top"%>
              <% end %>
              <div class="card-body">
                <h5 class="card-title" ><%= product.name.upcase %> <h5> <%= product.price %> ARS</h5></h5>
                <p class="card-text ov-text"><%= product.details %></p>
                <%= link_to "Ver detalles", product_path(product), class: "btn btn-primary mt-3" %>
              </div>
            </div>
          </div>
      <% end %>
  </div>
</div>
