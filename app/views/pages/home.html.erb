  <div class="carousel-inner">
    <div class="carousel-item active">
    <%= image_tag "https://res.cloudinary.com/drd7kavdp/image/upload/c_scale,h_450,w_1400/v1671117041/fb-distilled-spirits-filtration-pouring-wisky-header_1_d6ri5t.jpg", :height=>450, :width=>1400, :crop=>"scale" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "https://res.cloudinary.com/drd7kavdp/image/upload/c_scale,h_450,w_1400/v1671195544/img_22_jesaxj.webp", :height=>450, :width=>1400, :crop=>"scale" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "https://res.cloudinary.com/drd7kavdp/image/upload/c_scale,h_450,w_1400/v1671195085/img_19_hsqi3l.webp", :height=>450, :width=>1400, :crop=>"scale" %>
