<div class="container mt-5">
  <div class="row">
  <% @products.each do |product| %>
  <div class="col">
      <div class="card" style="box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2); border-radius: 8px 8px 8px 8px;">
        <div class="text-center">
        <%= cl_image_tag product.photo.key, class:"img-card card-img-top" %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text ov-text"><%= product.details.truncate(100) %></p>
         <%= link_to "ver detalles" , product_path(product.id), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
